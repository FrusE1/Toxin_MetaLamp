mixin review(name, date, comment)
	.review
		.review-profile
			.review-profile__avatar
				img(src=require('/src/images/avatar.png') class="review-profile__img")
			.review-profile__inf
				.review-profile__name=name
				.review-profile__date=date
		.review-grade
			.review-grade__like
				+like('12', true)
			.review-grade__comment=comment