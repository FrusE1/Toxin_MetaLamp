extends /pages/base.pug

block head
	title Form-element
block content
	include /components/sub-field/sub-field.pug
	include /components/date-dropdown/date-dropdown.pug
	include /components/dropdown/dropdown-room/dropdown-room.pug
	include /components/buttons/paginator/paginator.pug
	include /components/filter-date/filter-date.pug
	include /components/slider/slider.pug
	include /components/buttons/checkbox/checkbox-block.pug
	include /components/checkbox-rich/checkbox-rich-block.pug
	body.body-forms
		include /pages/header-ui/header_ui.pug
		.container-total._container
			.form-element__container-one._container-form
				.form-element__first-block
					include /components/text-field/text-field-block.pug
					.dropdown-guests-container
						include /components/dropdown/dropdown-guests/dropdown-guests-block.pug
					include /components/calendar/calendar.pug
					.date-dropdown-container
						+dateDropdown("date Dropdown", "date Dropdown")
					.filter-date__container
						+filterDate("filter date dropdown")
					+subField("subscription text field", "Email")
				.form-element__second-block
					.checkbox-container
						+checkboxElem("Checkbox Buttons")
					include /components/buttons/radio-button/radio-button-block.pug
					include /components/buttons/toggle/toggle-block.pug
					include /components/buttons/like/like-block.pug
					include /components/buttons/rate/rate-block.pug
				.form-element__third-block
					.slider__container
						+sliderElem("Range Slider")
					include /components/buttons/buttons/buttons.pug
					.paginator-container
						+pagination("pagination")
			.form-element__container-two._container-form
				.form-element__drop-rooms
					.form-element__dropdown-room
						.dropdown-room__container
							+dropdownRoom("dropdown", "Default")
						include /components/dropdown/dropdown-room-expanded/dropdown-room-expanded.pug
				.form-element__drop-guests-one
					include /components/dropdown/drop-guests-expanded/drop-guests-expOne.pug
				.form-element__drop-guests-one
					include /components/dropdown/drop-guests-expanded/drop-guests-expTwo.pug
			.form-element__container-three._container-form
				.form-element__list
					include /components/checkbox-list/checkbox-list-block.pug
					+checkboxRich("rich Checkbox Buttons")
					.bullet-list
						include /components/bullet-list/bullet-list-ui.pug
			.form-element__container-four._container-form
				.form-element__other
					include /components/benefits/benefits-block.pug
					include /components/review/review-block.pug